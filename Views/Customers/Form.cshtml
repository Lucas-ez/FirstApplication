@model FirstApplication.ViewModels.FormCustomerViewModel
@{
}

<h1>New Customer</h1>

@using (Html.BeginForm("Save", "Customers"))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.Name)
		@Html.TextBoxFor(m => m.Customer.Name)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.Birthdate)
		@Html.TextBoxFor(m => m.Customer.Birthdate, new {@placeholder = "DD/MM/YYYY"})
	</div>
	<div>
		<label>
			@Html.CheckBoxFor( m => m.Customer.IsSubcribedToNewsletter ) Subscribed to Newsletter
		</label>
	</div>
	<div class="form-group">
		@Html.DropDownListFor(m => m.Customer.MemberShipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type")
	</div>
	@Html.HiddenFor(m => m.Customer.Id)
	<button type="submit" class="btn btn-primary">Save</button>
}